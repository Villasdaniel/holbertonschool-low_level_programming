#include "holberton.h"

/**
 * rev_string -  reverses a string
 * @s: pointer
 * Description:  reverses a string
 */

void rev_string(char *s)
{
	char a;
	int b;
	int c;
	
	for (b = 0 ; s[b] != '\0' ; b++)
	{
	}
	c = 0;
	b = b - 1;
	for (; b >= c ; b--)
	{
		a = s[c];
		s[c] = s[b];
		s[b] = a;
		c++;
	}
}
		
		
		
	
